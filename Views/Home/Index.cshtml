@model IEnumerable<OnlineBookShop.Models.books>


@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="food_section layout_padding-bottom">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Danh sách sản phẩm
            </h2>
        </div>

        <div class="filters-content">
            <div class="row grid">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-lg-4 all pizza">

                        <div class="box">
                            <div>
                                <div class="img-box">
                                    <img src="@item.image_url" alt="ABC Online Shop">
                                </div>
                                <div class="detail-box">
                                    <h6>
                                        @item.title
                                    </h6>
                                    <div class="options">
                                        <h6>
                                            @{
                                                var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
                                            }
                                            @String.Format(info,"{0:C}", item.price)
                                        </h6>
                                        <a href="">
                                            <i class="fa fa-shopping-cart" style="color: #fff; font-size: 20px;" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</section>

<!-- end food section -->
<!-- client section -->

